html, body .framework .main-wrapper .protal-menu
    padding 0
    margin 0
    border none
    height 100vh
    width 100%
    .ivu-layout-sider
        background #ffffff
        &.mini-sider
            width 80px !important
            min-width 80px !important
            max-width 80px !important
            flex 0 0 80px !important
    .protal-logo
        height 64px
        line-height 64px
        color #ffffff
        text-align center
        font-size 20px
        &.logo-dark
            background #515a6e
        .protal-title
            font-size 16px
    .ivu-menu
        height calc(100% - 64px)
        overflow auto
    .protal-header
        color #f6ca9d
        padding 0
        .header-trigger
            display inline-block
            line-height 64px
            width 64px
            height 64px
            text-align center
            cursor pointer
            &:hover
                background rgba(0, 0, 0, 0.2)
            i
                font-size 20px
            .rotate-icon
                transform rotate(-90deg)
        .protal-header-user
            float right
            display inline-block
            margin-right 20px
            font-size 18px
            cursor pointer
    .mini-sider
        .ivu-menu-item
            width 100%
            padding 14px 0px
    .protal-breadcrumb
        padding 10px 16px
        border-bottom 1px solid #dcdee2
    .protal-content
        padding 10px 16px
.ivu-dropdown-item
    &:hover, &.active
        color #2d8cf0
        background #f0faff